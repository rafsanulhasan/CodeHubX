<?xml version="1.0" encoding="UTF-8"?>
<ContentView x:Class="CodeHubX.Controls.OrganizationListItem"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:CodeHubX.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkitControl="using:Microsoft.Toolkit.Uwp.UI.Controls"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <RelativeLayout Margin="8,8,0,8">
        <Image x:Name="avatarEllipse"
               WidthRequest="65"
               HeightRequest="65"
               Margin="0,0,12,0"
               Source="{Binding AvatarUrl, Mode=OneWay}" />

        <Label x:Name="nameText"
               FontSize="20"
               Text="{Binding Login, Mode=OneWay}" />
    </RelativeLayout>
</ContentView>

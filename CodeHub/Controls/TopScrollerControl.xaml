<UserControl
    x:Class="CodeHub.Controls.TopScrollerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Width="48"
    Height="48"
    Tapped="TopScrollerHandleControl_OnTapped">

    <!--Layout root-->
    <Grid>

        <!--Background Ellipse-->
        <Ellipse Width="48"
                 Height="48"
                 Fill="{StaticResource SystemControlBackgroundAccentBrush}"
                 Opacity="0.8"
                 x:Uid="TopScrollerControl"
                 ToolTipService.ToolTip="Scroll to the top"/>

        <!--Symbol icon-->
        <Viewbox StretchDirection="DownOnly"
                 Width="16"
                 Height="16"
                 IsHitTestVisible="False">
            <SymbolIcon Symbol="Up"/>
        </Viewbox>
    </Grid>
</UserControl>